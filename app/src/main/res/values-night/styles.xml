<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyleSecond</item>
        <item name="android:textColorPrimary">@color/textColor</item>
    </style>


    <style name="RoundedAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColorPrimary">@color/teal_200</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="RoundedButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/normalTextSize</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <style name="RoundedEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/normalTextSize</item>

        <item name="android:textColor">@color/textColor</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>

        <item name="android:layout_height">@dimen/roundedEditTextHeight</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#4B4EFC</item>
<!--        <item name="android:paddingTop">0dp</item>-->
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogButtonStyleSecond" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="DatePickerTheme" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/button_radius</item>
        <item name="cornerSizeTopLeft">@dimen/button_radius</item>
        <item name="cornerSizeBottomRight">@dimen/button_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/button_radius</item>
    </style>

</resources>